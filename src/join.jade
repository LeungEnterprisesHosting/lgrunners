extends _layout

block vars
  - title       = 'Join | LGRunners Running Club'
  - description = 'We welcome all new members.  Sign up for our email list here and come to one of our meetings!'
  - page        = 'join'

block content
  .jumbotron.background-runners.text-center
    .container.animated.fadeIn
      h1.text-uppercase Join Us
      p All new members are welcome&mdash;feel free to bring some friends too!
  .container.animated.fadeIn
    .row
      .col-sm-6
        h2 Email List
        p Join our email list to get meeting reminders and special announcements.
        form(action="//lgrunners.us11.list-manage.com/subscribe/post?u=1b971e39977e1cfc437c2eb1b&amp;id=5cd6b4a23a" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate)
          .form-group
            label(for="mce-FNAME") First Name
            input.form-control(type="text" value="" name="FNAME" class="" id="mce-FNAME" placeholder='Your First Name')
          .form-group
            label(for="mce-LNAME") Last Name
            input.form-control(type="text" value="" name="LNAME" class="" id="mce-LNAME" placeholder='Your Last Name')
          .form-group
            label(for='mce-EMAIL') Email Address
            input.form-control(type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder='Your Email')
          div(style="position: absolute; left: -5000px;")
            input(type="text" name="b_1b971e39977e1cfc437c2eb1b_5cd6b4a23a" tabindex="-1" value="")
          .clearfix
          br
          input.btn.btn-custom-dark(type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button")

      .col-sm-6
        h2 Meetings
        p Meetings are held every Sunday at 4pm in Oxford Park.