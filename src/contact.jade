extends _layout

block vars
  - title       = 'Contact Us | LGRunners Running Club'
  - description = 'We value your questions and comments!  Please send us your thoughts and we\'ll get back to you as soon as we can.'
  - page        = 'contact'

block content
  .jumbotron.background-runners.text-center
    .container.animated.fadeIn
      h1.text-uppercase Contact Us
      p We value your questions and comments, and will get back to you as soon as we can.
  .container.animated.fadeIn
    br
    .col-sm-10.col-sm-offset-1
      form.form-horizontal(action='//formspree.io/brendancantos@gmail.com' method='POST')
        input(type='hidden' name='_next' value='http://lgrunners.github.io/thankyou-message')
        .form-group.form-group-lg
          label.col-sm-2.control-label First Name
          .col-sm-10
            input.form-control(type='text' name='firstName' placeholder='Your First Name' required)
        .form-group.form-group-lg
          label.col-sm-2.control-label Last Name
          .col-sm-10
            input.form-control(type='text' name='lastName' placeholder='Your Last Name' required)
        .form-group.form-group-lg
          label.col-sm-2.control-label Email Address
          .col-sm-10
            input.form-control(type='email' name='_replyto' placeholder='Your Email' required)
        .form-group.form-group-lg
          label.col-sm-2.control-label Message
          .col-sm-10
            textarea.form-control(name='message' placeholder='Your Message' rows='5' required)
        .col-sm-10.col-sm-offset-2
          br
          button.btn.btn-custom-dark.btn-lg(type='submit') Send